<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <!-- Flutter Configuration -->
    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>

    <!-- ✅ Location permissions for showing user location -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app needs your location to display your position on the map.</string>

    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>This app requires location access to improve your map experience even when the app is in background.</string>

    <!-- ✅ Allow network loading for map tiles (OpenStreetMap / others) -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>

</dict>
</plist>
